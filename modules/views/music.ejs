        <script>
            document.querySelectorAll("button[data-url]").forEach(tag => {
                tag.addEventListener("click", function(e) {
                    let songUrlArr = e.target.getAttribute("data-url").split("/");
                    let songName = songUrlArr[songUrlArr.length - 1];
                    document.location.href = `audio/${songName}`;
                });
            });
        </script>
